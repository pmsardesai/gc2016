// HEADER
.header {
	height headerHeight
	border-bottom 1px solid black
	color white
	position relative
	background: rgba(0, 0, 0, 0.60);
	z-index 1

	.header-content {
		.logo {
			display inline-block
			background-image url('images/logo.png')
			background-size cover
			width 150px
			height headerHeight
			absolute left 3%
		}
		
		.hamburger-icon {
			display none
		}

		@media phone {
			.hamburger-icon {
				absolute top 0 right 0 bottom 0
				padding 14px 20px
				vertical-align middle
				display block
			}
		}
	}
}

@media phone {
	.main-app.pinned .logo {
		display none
	}
}