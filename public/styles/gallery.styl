.gallery {
	font-family: SourceSansPro

	.background {
		background-image url('images/background/gallery.png')
	}

	.gallery-container {
		display table
		margin 10px auto
	}
	
	.footer {
		position: fixed;
		bottom: 0;
	}
}

@media (max-width: 550px) {
	.gallery {
		.footer {
			position: relative;
		}
	}
}