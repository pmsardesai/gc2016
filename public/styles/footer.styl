// FOOTER
.footer {
	background-color mainColour
	height footerHeight
	width 100%
	font-size 85% 
	color white

	.copyright-info {
		float left
		padding 8px 0px 0px 5px

		/*On mobile, this is two lines when going from pinned to unpinned
	      state. Add this so that the content is always in one line */
		overflow hidden
		white-space nowrap
	}
	
	.contact-us-container {
		float right
		padding 8px 5px 0px 0px

		.email {
			text-decoration underline
			padding-left 3px
		}

		.fa-facebook-official {
			padding-left 5px
			font-size 15px
			vertical-align middle
			color defaultBlue
		}
	}
}

@media (max-width: 450px) {
	.footer {
		text-align center
		
		.copyright-info, .contact-us-container {
			padding-top 0px
			float none
			display block
			font-size 85%
		}
		
		.copyright-info {
			padding-top 1px
		}
	}
}