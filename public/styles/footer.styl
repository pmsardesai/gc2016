// FOOTER
.footer {
	background-color mainColour
	height footerHeight
	width 100%
	font-size 70% // 10px
	color white

	.copyright-info {
		float left
		padding 9px 0px 0px 5px

		/*On mobile, this is two lines when going from pinned to unpinned
	      state. Add this so that the content is always in one line */
		overflow hidden
		white-space nowrap
	}
	
	.contact-us-container {
		float right
		padding 9px 5px 0px 0px

		.email {
			text-decoration underline
			padding-left 3px
		}

		.fa-facebook {
			padding-left 5px
			font-size 13px
			vertical-align middle
		}
	}
}

@media (max-width: 350px) {
	.footer {
		text-align center
		
		.copyright-info, .contact-us-container {
			padding-top 2px
			float none
			display block
			font-size 90%
		}
	}
}