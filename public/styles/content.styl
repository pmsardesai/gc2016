// Container - the main container that hosts all the pages
.content {
	.content-inner {
		width 100%
	}
	width 100%
	height 100%
}

@media phone {
	.main-app.pinned .content .content-inner {
		display none;
	}
}

// Home
.home {
	background-image url('images/home-background.png')
	background-size cover
	background-position center 0
	absolute top 0
	color white
	text-align center
	
	.content-inner {
		absolute top 20%

		.tagline {
			font-size 225% // 36px
		    padding 30px 0px
		    text-shadow black 2px 2px 2px
		}
		
		.event-details {
			padding 20px 0px
			background rgba(0, 0, 0, 0.5)
			width 350px
			margin 20px auto
			
			.title {
				font-size 187% //30px
			}
		}
		
		.button-container {
			padding-top 30px
			
			.button {
				background #00ABFC
				border-radius 2px
			    padding: 8px 35px;
			    font-size 125% //20px
			}
			
			.register-button {
				margin-right 10px
			}
		}
	}
}

@media phone {
	.home .content-inner {

		.tagline {
			font-size 125% //20px
		}
		.event-details  {
			width 250px 
			padding 5px 0px 10px 0px
			
			.title {
				font-size 150% // 24px
			}
		}
		.button-container {
			padding-top 50px
		}
	}
}

@media minHeight {
	.home .content-inner {
		.tagline {
			padding 5px 0px
		}
		.event-details {
			margin 5px auto
		}
		.button-container {
			padding-top 0px
		}
	}
}