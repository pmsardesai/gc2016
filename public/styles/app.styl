@import 'nib'

// VARIABLES
headerHeight = 60px;
footerHeight = 30px;
menuWidth = 250px;

mainColour = #202020;
defaultBlue = #00ABFC;
defaultOrange = #FF6A00;
offWhiteBackground = #FBFAF3;

PTSansNarrow = 'PT Sans Narrow', sans-serif;
SourceSansPro = 'Source Sans Pro', sans-serif;

animDuration = 300ms;

// MOBILE
phone = "(max-width: 640px)";
phonePortrait = "(max-width: 640px) and (orientation: portrait)";
phoneLandscape = "(max-width: 640px) and (orientation: landscape)";

// DEFAULT STYLE FOR BUTTON
button 
	border none
	cursor pointer
	background-color transparent
	outline none
	white-space nowrap
	color white
	font-family PTSansNarrow

button:hover, 
button:active 
	color #DCDCDC

// DEFAULT STYLE FOR LINKS
a
	text-decoration none
	color white
	display inline-block

a:hover,
a:active 
	color #DCDCDC

// MAIN APP
body
	margin 0px
	font-family PTSansNarrow
	font-size 16px
	
.main-app
	absolute top 0 bottom 0 left 0 right 0
	transition right animDuration
	
.page-header {
	position relative

	.background {
		height 400px
		background rgba(0, 0, 0, 0.6)
		background-size cover
		background-position center
	}

	.page-title {
		font-size 300%
		text-align center
		padding 0px
		font-family SourceSansPro
		font-weight 300
		absolute left right bottom
		color white
		background-color rgba(0, 0, 0, 0.6)
	}
}

.page-details
	width 100%
	background-color #FDE296
	padding 20px 10px
	font-size 125%
	box-sizing border-box

// size of icon
.fa.fa-1dot5x
	font-size 1.5em
	padding 10px

// things to hide when menu is pinned
@media phone {
	.main-app.pinned {
		right menuWidth
		
		// coming soon
		.coming-soon .coming-soon-inner {
			display none
		}

		// home
		.home {
			.tagline,
			.event-details, 
			.button-container {
				display none
			}
		}
		
		// committe page
		.committee {
			.footer {
				display none
			}
		}
		
		// past events page
		.past-events {
			.footer {
				display none
			}
		}
		
		.page-header,
		.page-content {
			display none;
		}
		
		// footer
		.footer .copyright-info {
			display none
		}
	}
}

@import 'header.styl'
@import 'footer.styl'
@import 'menu.styl'
@import 'contact.styl'
@import 'eventcard.styl'

// pages
@import 'home.styl'
@import 'committee.styl'
@import 'pastevents.styl'
@import 'comingsoon.styl'
    
