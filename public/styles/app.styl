@import 'nib'

// VARIABLES
headerHeight = 60px;
footerHeight = 20px;
menuWidth = 250px;

mainColour = #202020;
PTSansNarrow = 'PT Sans Narrow', sans-serif;

// MOBILE
phone = "(max-width: 480px)";


// DEFAULT STYLE FOR BUTTON
.button 
	border none
	cursor pointer
	background-color transparent
	outline none
	white-space nowrap
	color white
	font-family PTSansNarrow

.button:hover, 
.button:active 
	color #DCDCDC

// MAIN APP
body
	margin 0px
	font-family PTSansNarrow
	
.mainApp {
	absolute top 0 bottom 0 left 0 right 0
	transition right 500ms
}
.mainApp.pinned {
	right menuWidth
	
	.header .label {
		@media phone {
			font-size 30px
			padding-top 10px
			overflow hidden
		}
	}
}

@import 'header.styl'
@import 'footer.styl'
@import 'content.styl'
@import 'menu.styl'

    
