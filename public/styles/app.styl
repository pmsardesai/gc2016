@import 'nib'

// VARIABLES
headerHeight = 60px;
footerHeight = 30px;
menuWidth = 250px;

mainColour = #202020;
PTSansNarrow = 'PT Sans Narrow', sans-serif;
SourceSansPro = 'Source Sans Pro', sans-serif;

animDuration = 300ms;

// MOBILE
phone = "(max-width: 640px)";
phonePortrait = "(max-width: 640px) and (orientation: portrait)";
phoneLandscape = "(max-width: 640px) and (orientation: landscape)";

// DEFAULT STYLE FOR BUTTON
button 
	border none
	cursor pointer
	background-color transparent
	outline none
	white-space nowrap
	color white
	font-family PTSansNarrow

button:hover, 
button:active 
	color #DCDCDC

// DEFAULT STYLE FOR LINKS
a
	text-decoration none
	color white
	display inline-block

a:hover,
a:active 
	color #DCDCDC

// MAIN APP
body
	margin 0px
	font-family PTSansNarrow
	font-size 16px
	
.main-app
	absolute top 0 bottom 0 left 0 right 0
	transition right animDuration

// things to hide when menu is pinned
@media phone {
	.main-app.pinned {
		right menuWidth
		
		// coming soon
		.coming-soon .coming-soon-inner {
			display none
		}

		// home
		.home {
			.tagline,
			.event-details, 
			.button-container {
				display none
			}
		}
		
		// committe page
		.committee {
			.committee-title,
			.contacts-container,
			.footer {
				display none
			}
		}
		
		// footer
		.footer .copyright-info {
			display none
		}
	}
}

@import 'header.styl'
@import 'footer.styl'
@import 'menu.styl'
@import 'contact.styl'

// pages
@import 'home.styl'
@import 'committee.styl'
@import 'comingsoon.styl'
    
