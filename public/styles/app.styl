// MIXINS
@import 'mixins.styl'

// VARIABLES
headerHeight = 60px;

body
	margin 0px

// HEADER
.header {
	height headerHeight
	border-bottom 1px solid black
	absPos(0, 0, null, 0)
	
	.text {
		text-align left
		font-size 40px
		font-family 'PT Sans Narrow', sans-serif
		padding 5px 10px
	    display: inline-block;
	}
	
	.main-menu-button {
		border-left 1px solid black
		height 100%
		width headerHeight
	    display: inline-block;
    	float: right;
	}
}

// FOOTER
.footer {
	background-color black
	height 20px
	absPos(null, 0, 0, 0)

	.text {
		color white
		text-align center
		font-size small
		padding-top 2px
	}
}

// CONTENT
.content {
	absPos(headerHeight, 200px, 0, 0)
}

// MENU
@import 'menu.styl'

    
