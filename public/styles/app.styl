@import 'nib'

// VARIABLES
headerHeight = 60px;
footerHeight = 20px;
menuWidth = 250px;

mainColour = #202020;
PTSansNarrow = 'PT Sans Narrow', sans-serif;

animDuration = 300ms;

// MOBILE
phone = "(max-width: 480px)";
phoneLandscape = "(max-width: 640px)";

// DEFAULT STYLE FOR BUTTON
.button 
	border none
	cursor pointer
	background-color transparent
	outline none
	white-space nowrap
	color white
	font-family PTSansNarrow

.button:hover, 
.button:active 
	color #DCDCDC

// MAIN APP
body
	margin 0px
	font-family PTSansNarrow
	
.main-app
	absolute top 0 bottom 0 left 0 right 0
	transition right animDuration

@media phoneLandscape {
	.main-app.pinned {
		right menuWidth
	}
}

@import 'header.styl'
@import 'footer.styl'
@import 'content.styl'
@import 'menu.styl'

    
