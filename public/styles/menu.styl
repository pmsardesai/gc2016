/********* Web version *********/
.menu-bar.web {
	display inline-block
	absolute right 0
	height 100%
	
	.menu-button {
		font-size 125% 
		padding 15px 15px 14px 15px
		
		&.active {
			border-bottom 5px solid defaultBlue
			background mainColour
		}
	}
}

// as the width of browser decreases, reduce font/padding on buttons
reducePadding = "(max-width: 1000px)";
@media reducePadding {
	.menu-bar.web .menu-button {
		padding 15px 8px 14px 8px
	}
}
reduceFontPadding = "(max-width: 875px)";
@media reduceFontPadding {
	.menu-bar.web .menu-button {
		padding 17px 8px 16px 8px;
		font-size 106% //17px
	}
}

/********* Mobile version *********/
.menu-bar.mobile {
	fixed top headerHeight right 0 bottom 0
	width 0
	transition all animDuration
	background-color black
	overflow-y auto
	overflow-x hidden
	display none
	z-index 1
    border-top: 1px solid white;
	
	.menu-button {
		padding 9px 0px
		display block
		background-color black
		font-size 200% //32px
		text-align center
		
		&.active {
			border-left 5px solid defaultBlue
			background mainColour
		}
	}
}

// style when menu is pinned
.main-app.pinned .menu-bar.mobile {
	width menuWidth
}

// Once the web menu doesn't fit on screen, show mobile menu
@media phone {
	.menu-bar.web {
		display none
	}
	.menu-bar.mobile { 
		display block 
	}
}