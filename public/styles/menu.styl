/*********** Menu Button ************/
.menu-bar .menu-button {
	color white
	text-decoration none
}
.menu-bar .menu-button:hover, 
.menu-bar .menu-button:active 
	color #DCDCDC

/********* Web version *********/
.menu-bar.web {
	display inline-block
	absolute right 0
	height 100%
	
	.menu-button {
		font-size 125% 
		padding 1px 15px
	}
}

// as the width of browser decreases, reduce font/padding on buttons
reducePadding = "(max-width: 800px)";
@media reducePadding {
	.menu-bar.web .menu-button {
		padding 1px 10px
	}
}
reduceFontPadding = "(max-width: 750px)";
@media reduceFontPadding {
	.menu-bar.web .menu-button {
		padding 1px 8px
		font-size 106% //17px
	}
}

/********* Mobile version *********/
.menu-bar.mobile {
	fixed top 0 right 0 bottom 0
	width 0
	transition all animDuration
	background-color mainColour
	overflow-y auto
	overflow-x hidden
	display none
	
	.menu-button {
		display block
		width 100%
		height headerHeight
		background-color mainColour
		font-size 200% //32px
		text-align center
	}
}

// style when menu is pinned
.main-app.pinned .menu-bar.mobile {
	width menuWidth
}

// In phone mode, hide web version and display mobile version
@media phone {
	.menu-bar.web {
		display none
	}
	.menu-bar.mobile { 
		display block 
	}
}