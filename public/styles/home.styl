.home {
	background-image url('images/background-home.png')
	background-size cover
	background-position center 0
	color white
	text-align center
	display table
	width 100%
	height 100%
	
	.home-inner {
		display table-cell
		vertical-align middle
	}
	
	.home-header{
		height headerHeight
		color white
		fixed top 0 right 0 left 0
		background rgba(0, 0, 0, 0.7)
	}
	
	.tagline {
		font-size 200%
	    padding headerHeight 0px 10px 0px
	    text-shadow black 2px 2px 2px
	}
	
	.event-details-container {
		padding 5px 0px
		background rgba(0, 0, 0, 0.7)
		width 400px
		margin 5px auto
		
		.title-statement {
			font-size 150%
			margin-bottom -7px
			padding-top 5px
			
			.super{
				font-size 50%
				vertical-align top
			}
		}

		.title {
			font-size 300%
			font-weight 600
		}
		
		.details {
		    margin-bottom 5px
		}

		.date-details {
			display inline-block
			background black
			width 70px
			margin 5px 20px 0px 0px
			border-radius 4px
			overflow hidden
			border 2px solid black
			font-size 150%
			
			.day {
				letter-spacing 12px
				margin-right -10px
				border-top 1px solid white
				border-bottom 1px solid white
				height 30px
			}
			
			.year {
				height 32px
			}
		}
		
		.date-details-mobile {
			display none
		}
		
		.hotel-details {
			display inline-block
			vertical-align top
			padding-top 5px
			
			.name {
				font-size 130%
				font-weight bold
			}

		}
		
		.invitation {
			padding 10px 5px
		    border-top 1px solid white
		}
	}

	.button-container {
		padding-top 10px
		padding-bottom 5px
		
		.button {
			background defaultBlue
			border-radius 2px
		    padding 8px 30px
		    font-size 125% //20px
		}
		
		.register-button {
			margin-right 10px
		}
	}
	
	.footer {
		display table-row
	}
}

@media (max-width: 550px), (max-height:560px) {
	.home {
		.tagline {
			font-size 130% 
		}
		.event-details-container {
			width 250px 
			padding 5px 0px 10px 0px
			margin 3px auto
			
			.title-statement {
				font-size 100% 
				margin-bottom -3px
			}

			.title {
				font-size 200% 
			}

			.date-details {
				display none
			}
			.date-details-mobile {
				display block
				margin 5px 60px 0px 60px
				background black
			    border-radius 2px
			    padding 5px
			    
			    sup {
			    	font-size 70%
			    }
			}
			
			.hotel-details{
				font-size 80%
			    padding-bottom 5px
			}
			
			.invitation {
				padding 10px 5px 5px 5px
				font-size 80%
			}
		}
	}
}

@media (max-height: 520px) {
	.home {
		.tagline {
			padding headerHeight 0px 0px 0px
		    font-size 120%
		}
		.event-details-container {
			width 200px
			font-size 80%
			
			.title-statement {
				font-size 110%
			}
			.title {
				font-size 225%
			}
			
			.date-details-mobile {
			    margin: 5px 50px 0 50px;
			}
			
			.hotel-details {
			    font-size 90%
			}
		}
		.button-container {
			padding-top 0px
			
			.button{
			    padding 4px 15px
			}
		}
	}
}