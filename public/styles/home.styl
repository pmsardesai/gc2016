.home {
	background-image url('images/background/home.png')
	background-size cover
	background-position center 0
	color white
	text-align center
	display table
	width 100%
	height 100%
	
	.home-inner {
		display table-cell
		vertical-align middle
	}
	
	.home-header{
		height headerHeight
		color white
		fixed top 0 right 0 left 0
		background rgba(0, 0, 0, 0.7)
	}
	
	.tagline {
		font-size 200%
	    padding 70px 0px 10px 0px
	    text-shadow black 2px 2px 2px
	}
	
	.event-details-container {
		padding 5px 0px
		background rgba(0, 0, 0, 0.7)
		width 400px
		margin 5px auto
		
		.title-statement {
			font-size 150%
			margin-bottom -7px
			padding-top 5px
			
			.super{
				font-size 50%
				vertical-align top
			}
		}

		.title {
			font-size 300%
			font-weight 600
		}
		
		.details {
		    margin-bottom 5px
		}
		
		.date-details {
			display block
			margin 5px 110px 0px 110px
			background black
		    border-radius 2px
		    padding 5px
		    font-size 150%
		    
		    sup {
		    	font-size 70%
		    }
		}

		.hotel-details {
			display inline-block
			vertical-align top
			padding-top 5px
			
			.name {
				font-size 130%
				font-weight bold
			}

		}
		
		.invitation {
			padding 7px
		    border-top 1px solid #9F9F9F
		    font-size 90%
		}
	}

	.button-container {
		padding 10px 0px
		
		.button {
			background defaultBlue
			border-radius 2px
		    padding 8px 30px
		    font-size 125% //20px
		}
		
		.register-button {
			margin-right 10px
		}
	}
	
	.parrikar-video-container {
		padding 5px 0px
		background rgba(0, 0, 0, 0.7)
		width 400px
		margin 5px auto

		.message {
			padding 7px
		    font-size 90%
		    
		    .fa-envelope {
		    	padding-right 10px
		    }

		    a {
		    	display inline
		    	text-decoration underline
		    }
		    
		    .youtube-link {
				background-image url('images/home-parrikar.jpg')
				height 100px
				width 177px
				background-size cover
				margin 5px auto 0px auto
				cursor pointer
				display block
			}
		}
	}

	.footer {
		display table-row
	}
}

@media (max-width: 550px), (max-height:610px) {
	.home {
		.tagline {
			font-size 130% 
		}
		.event-details-container {
			width 250px 
			padding 5px 0px 10px 0px
			margin 3px auto
			
			.title-statement {
				font-size 100% 
				margin-bottom -3px
			}

			.title {
				font-size 200% 
			}

			.date-details {
				margin 5px 60px 0px 60px
			    font-size 100%
			    
			    sup {
			    	font-size 70%
			    }
			}
			
			.hotel-details{
				font-size 80%
			    padding-bottom 5px
			}
			
			.invitation {
				font-size 80%
			}
		}
		
		.parrikar-video-container {
			width 250px 
			padding 5px 0px 10px 0px
			margin 3px auto
		}
	}
}

@media (max-height: 560px) {
	.home {
		.tagline {
			padding-bottom 0px
		    font-size 120%
		}
		.event-details-container {
			width 200px
			font-size 80%
			
			.title-statement {
				font-size 110%
			}
			.title {
				font-size 225%
			}
			
			.date-details {
			    margin: 5px 50px 0 50px;
			}
			
			.hotel-details {
			    font-size 90%
			}
		}
		.button-container {
			padding 0px
			
			.button{
			    padding 4px 15px
			}
		}
		
		.parrikar-video-container {
			width 200px
			font-size 80%
		}
	}
}

@media (max-width: 350px) {
	.home {
		.tagline {
			font-size 110%
		    text-shadow black 1px 1px 1px
	    }
	}
}