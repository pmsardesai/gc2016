.coming-soon {
	display table
	width 100%
	height 100%
	text-align center
	background-color #fbfaf3
	
	.coming-soon-inner {
		display table-cell
		vertical-align middle

		.message {
			font-style SourceSansPro
			font-weight 300
			font-size 400%
			padding headerHeight 0px 20px 0px
		}

		.fa-wrench {
			text-align center
		}
	}
}